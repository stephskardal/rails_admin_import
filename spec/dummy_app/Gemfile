source 'https://rubygems.org'

gem 'rails', '~> 6.1'
gem 'webrick', '~> 1.7'

group :active_record do
  case ENV['CI_DB_ADAPTER']
  when 'mysql2'
    gem 'mysql2', '~> 0.5.3'
  when 'postgresql'
    gem 'pg', '>= 0.18'
  else
    gem 'sqlite3', '~> 1.4.2'
  end
end

group :mongoid do
  gem 'mongoid', '~> 7.3'
end

gem 'rails_admin', '~> 3.0.0'
gem 'rails_admin_import', path: '../../'

gem 'sass-rails', '~> 6.0'
gem 'uglifier', '>= 1.3'

gem 'pry-byebug'
gem 'sassc-rails'
