- if fields.any?
  .form-group.control-group
    %label.col-sm-2.control-label= t("admin.import.#{section}")
    .col-sm-10.controls
      %ul.list-unstyled
        - fields.each do |field|
          %li
            %label
              - if section == "model_fields" && field.is_a?(RailsAdmin::Config::Fields::Types::BelongsToAssociation)
                = field.foreign_key.to_s.capitalize.gsub("_", " ")
              - else
                = capitalize_first_letter(field.label)

      %p.help-block= t("admin.import.help.#{section}")

